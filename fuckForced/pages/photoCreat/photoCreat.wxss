.start{
  display: inline-block;
  width:40rpx;
  padding-left:20rpx;
  margin-top:-2rpx;
} 
.btn{
  background:#ffe2b1;
  color: #d84e43;
  width:660rpx;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 12rpx;
  margin:40rpx auto 0 auto;
  font-size: 34rpx;
}
.wrning{
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  font-size: 34rpx;
  color: #ffe2b1;
  width:660rpx;
  margin-top:40rpx;
}