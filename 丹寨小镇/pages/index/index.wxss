/**index.wxss**/
.my-swiper image{
  width: 100%;
  height:100%;
}
.container{
	background: #fff;
}
.wrap{
	display: inline-block;
}
.wrap-item{
	display: inline-block;
	width: 33%;
	height: 6rem;
	line-height: 6rem;
	border-bottom: 1px solid #fff;
	background-color: orange;
	text-align: center;
  color:#fff;
}
 /*不支持 :nth-child(2);*/
.wrap-item.exp{
	border: 1px solid #fff;
	border-top: 0;
}
.footer{
  width:100%;
  height:8rem;
  margin-bottom:3rem;
}
.footerImg{
  display: block;
  width:100%;
  height:8rem;
}
p{
	font-family: PingFangSC-Regular;
	font-size: 34rpx;
	color: #5A616B;
	letter-spacing: 0;
	line-height: 60rpx;
	background: #fff;
	padding: 0 30rpx;
	text-indent: 2em;
}
.btn{
	width:80%;
	height:80rpx;
	line-height:80rpx;
	background: #00d79e;
	color:#fff;
	margin:10rpx auto 60rpx auto;
}